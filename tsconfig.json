{
  "extends": "@voiceflow/tsconfig/web.json",
  "compilerOptions": {
    "skipLibCheck": true,
    "module": "esnext",
    "moduleResolution": "node",
    "lib": [
      "dom",
      "es2019"
    ],
    "jsx": "react-jsx",
    "baseUrl": ".",
    "outDir": "build",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "types": [
      "node"
    ]
  },
  "compileOnSave": false,
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "docs"
  ]
}
